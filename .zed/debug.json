// see: https://zed.dev/docs/debugger
[
  {
    "label": "Debug native binary",
    "adapter": "CodeLLDB",
    "request": "launch",
    "program": "$ZED_WORKTREE_ROOT/build/out",
    "cwd": "$ZED_WORKTREE_ROOT",
    "build": {
      "command": "make",
      "args": ["-j8"],
      "cwd": "$ZED_WORKTREE_ROOT"
    }
  }
]
